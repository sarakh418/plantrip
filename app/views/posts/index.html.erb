<main class= "body-main">
	
    <div id="new-post">
   	<h3> Posts </h3>
   	<%= form_for @post, remote: true do |f|%>
   	<%= f.label :title, "New Trip"%>

   	<%= f.text_field :title %>
   	<br><br>
   	<br>
   	<%= f.label :content, "Details" %>
   	<%= f.text_field :content %>
   	<br><br>
   	<%= f.submit %>
   	<%end%>
   </div>

   <div class="posts-list-container center-container">
	    <ul id="p">

		<% Post.all.reverse.each do |p| %>

		 <%= render "post" , post: p %>
		
		 <% end %>
		</ul>

		
	</div>
</main>